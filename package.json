    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.8.0",
    "istanbul": "0.4.5",
    "mocha": "5.0.0",
    "nyc": "11.4.1",
    "prettier": "1.10.2",
    "prettier-eslint": "8.8.1"
  },
  "dependencies": {
    "tcomb": "3.2.24",
    "tcomb-validation": "3.4.1"
